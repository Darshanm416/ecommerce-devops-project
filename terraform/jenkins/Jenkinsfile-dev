pipeline {
  agent any

  environment {
    AWS_REGION = 'us-east-1' // Change to your region
    TF_VAR_environment = 'dev'
  }

  parameters {
    string(name: 'ENV_DIR', defaultValue: 'terraform/environments/dev', description: 'Terraform environment folder path')
  }

  stages {
    stage('Checkout Code') {
      steps {
        git url: 'https://github.com/Darshanm416/ecommerce-devops-project.git', branch: 'main'
      }
    }

    stage('Debug Branch Name') { // <--- RE-ADDED THIS DEBUG STAGE
            steps {
                script {
                    echo "DEBUG: Current branch name is: ${env.BRANCH_NAME}"
                    // The following line is optional, but can provide more info if BRANCH_NAME isn't working
                    // echo "DEBUG: SCM checkout branch: ${scm.branches[0].name}"
                }
            }
    }

    stage('Initialize Terraform') {
      steps {
        dir("${params.ENV_DIR}") {
          sh 'terraform init'
        }
      }
    }

    stage('Validate Terraform') {
      steps {
        dir("${params.ENV_DIR}") {
          sh 'terraform validate'
        }
      }
    }

    stage('Format Check') {
      steps {
        dir("${params.ENV_DIR}") {
          sh 'terraform fmt -check'
        }
      }
    }

    stage('Terraform Plan') {
      steps {
        dir("${params.ENV_DIR}") {
          sh 'terraform plan -var-file="terraform.tfvars"'
        }
      }
    }

    stage('Terraform Apply') {
      when {
        branch 'main'
      }
      steps {
        dir("${params.ENV_DIR}") {
          sh 'terraform apply -auto-approve -var-file="terraform.tfvars"'
        }
      }
    }
  }
}
